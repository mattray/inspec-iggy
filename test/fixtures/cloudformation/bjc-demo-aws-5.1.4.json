                "AvailabilityZone": {
                    "Ref": "AvailabilityZone"
                },
                "VpcId": {
                    "Ref": "VPC"
                },
                "CidrBlock": "172.31.54.0/24",
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Join": [
                                " ",
                                [
                                    {
                                        "Ref": "DemoName"
                                    },
